dir "C:\Users\Seth\AppData\Roaming\.minecraft 1.20\saves\New World"
desc "Automatically mine the blocks in front of you"
scale 1000

import common
import transforms
import math

reset
    /kill @BlockDisplay
    /summon minecraft:block_display 6 57 1 {block_state:{Name:"minecraft:stone",Count:0b},Glowing:1b}
    
    as @BlockDisplay
        @s.initialize_transform()
        @s.set_transform()
        angle = 0
    end
end

clock tick
    angle += 5
    as @BlockDisplay
        @s.t00 = cos(angle)
        @s.t01 = -sin(angle)
        @s.t10 = sin(angle)
        @s.t11 = cos(angle)
        @s.tx = -cos(angle)
        @s.ty = -sin(angle) / 2
        tell @a "(@s.ty)"
        @s.set_transform()
    end
end
